{
  "name": "geometry",
  "version": "0.0.1",
  "author": "Grant Surlyn <grant@sunflowerseastar.com>",
  "license": "GPL-3.0",
  "repository": {
    "type": "git"
  },
  "scripts": {
    "build": "esbuild src/main.ts --bundle --minify --outfile=public/out.js",
    "dev": "node dev.js",
    "prettier:check": "prettier --check '**/*.{ts,js,css,json}'",
    "prettier:write": "prettier --write '**/*.{ts,js,css,json}'",
    "start": "node dev.js"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,js,css,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "three": "^0.148.0"
  },
  "devDependencies": {
    "@types/three": "^0.148.0",
    "esbuild": "^0.16.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.4"
  }
}
